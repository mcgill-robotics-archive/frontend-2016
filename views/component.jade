extends layout/layout

//- Page polymer elements
//- Page polymer elements
block elements
  if dev
    link(rel='import', href='/elements/index-elements.html')
  else
    link(rel='import', href='/elements/index-elements.vulcanized.html')
  //- Include the relevant Polymer component element HTML file
  link(rel='import', href='/elements/components/#{component}/#{component}.html')

//- Page style (loaded at the end of head)
block styles
  link(rel='stylesheet', href='/styles/index.css')

//- Page scripts (loaded at the end of head only if absolutely necessary)
block scripts_head
  script(type='text/javascript', src='../lib/eventemitter2/lib/eventemitter2.js')
  script(type='text/javascript', src='../lib/roslib/build/roslib.min.js')
  script(type='text/javascript', src='/scripts/interface.js')
  script(type = 'text/javascript').
    var frontendInterface = new MRFrontendInterface({
      'host': 'localhost',
      'port': 8080
    });

