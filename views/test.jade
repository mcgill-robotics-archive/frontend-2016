extends layout/layout

//- Page polymer elements
block elements
    if dev
        link(rel='import', href='/elements/index-elements.html')
    else
        link(rel='import', href='/elements/index-elements.vulcanized.html')

//- Page style (loaded at the end of head)
block styles
    link(rel='stylesheet', href='/styles/index.css')

//- Page scripts (loaded at the end of head only if absolutely necessary)
block scripts_head
    script(type = 'text/javascript').
      var frontendInterface = new MRFrontendInterface({
        'host': 'localhost',
        'port': 8080,
        'containerId': 'interfaceContainer',
        'topBarId': 'topBar'
      });
      window.onload = function () {
        frontendInterface.initialize();
      }

//- Page scripts (loaded at the end of body)
block scripts
    script(src='/scripts/index.js')

//- Main content
block body
    base-widget(width = '8', height = '4', x = '0', y = '0', title = 'Test 1')
    bar-component(topic = '/test_text_topic', message-type = 'std_msgs/Int64',
      label = 'Number', min = '0', max = '1000', step = '1')
    base-widget(width = '4', height = '8', x = '8', y = '0', title = 'Test 2')
    text-component(topic = '/test_text_topic', message-type = 'std_msgs/Int64',
      label = 'Number: ')
    base-widget(width = '8', height = '8', x = '0', y = '4', title = 'Test 3')
    base-widget(width = '4', height = '4', x = '8', y = '8', title = 'Test 4')

